doctype html
html(lang="en")
  head
    include includes/_settings.pug
    include includes/_head.pug
  body
    include includes/_navbar.pug
    
    header.l-header(data-aos="fade")
      .swiper.l-header__swiper
        .swiper-wrapper
          .swiper-slide
            .l-header__img-mask
              img.u-object-fit.js-lazy(data-src="img/banner/banner-img01.jpg", alt="音樂祭")
          .swiper-slide
            .l-header__img-mask
              img.u-object-fit.js-lazy(data-src="img/banner/banner-img02.jpg", alt="音樂祭")
          .swiper-slide
            .l-header__img-mask
              img.u-object-fit.js-lazy(data-src="img/banner/banner-img03.jpg", alt="音樂祭")

    main
      section.l-lineup.u-gradient(data-aos="fade")
        .container
          .u-mb-80(data-aos="fade-up")
            h2.u-text-4xl.u-color-secondary LINEUP
              span.u-text-lg MEGAPORT FESTIVAL

          .row.--gap.l-lineup__box.js-parallax(data-input-element=".l-lineup__box")
            .col-md-5.l-lineup__wrap(data-depth="0.1")
              a.l-lineup__link(href="##" data-aos="fade-up" ) 
                article.l-lineup__article
                  h3.u-text-xl.u-mb-8 9m88
                  .l-lineup__img-mask
                    img.js-lazy(data-src="img/lineup/lineup01.jpg", alt="大港開唱音樂祭-9m88")
            .col-md-7.l-lineup__wrap(data-depth="-0.1")
              a.l-lineup__link(href="##" data-aos="fade-up" ) 
                article.l-lineup__article.--lg
                  h3.u-text-xl.u-mb-8 恆月三途
                  .l-lineup__img-mask
                    img.js-lazy(data-src="img/lineup/lineup02.jpg", alt="大港開唱音樂祭-恆月三途")
            .col-xl-4.col-md-7.l-lineup__wrap(data-depth="-0.2")
              a.l-lineup__link(href="##" data-aos="fade-up" ) 
                article.l-lineup__article.--lg.--reverse
                  h3.u-text-xl.u-mt-8 Beyound Cure
                  .l-lineup__img-mask
                    img.js-lazy(data-src="img/lineup/lineup03.jpg", alt="大港開唱音樂祭-Beyound Cure")
            .col-xl-4.col-md-5.l-lineup__wrap(data-depth="-0.1")
              a.l-lineup__link(href="##" data-aos="fade-up" ) 
                article.l-lineup__article.--reverse
                  h3.u-text-xl.u-mt-8 Dudu King
                  .l-lineup__img-mask
                    img.js-lazy(data-src="img/lineup/lineup04.jpg", alt="大港開唱音樂祭-Dudu King")
            .col-xl-4.col-md-5.l-lineup__wrap(data-depth="-0.2")
              a.l-lineup__link(href="##" data-aos="fade-up" ) 
                article.l-lineup__article.--reverse
                  h3.u-text-xl.u-mt-8 Da Wang
                  .l-lineup__img-mask
                    img.js-lazy(data-src="img/lineup/lineup05.jpg", alt="大港開唱音樂祭-Da Wang")

      section.l-news(data-aos="fade")
        .l-news__btn-swiper.--prev
          iconify-icon.u-icon(icon="fa6-solid:arrow-left")
        .l-news__btn-swiper.--next
          iconify-icon.u-icon(icon="fa6-solid:arrow-right")
          
        .container
          .u-mb-80.u-text-center(data-aos="fade-up")
            h2.u-text-4xl.u-color-secondary NEWS
              span.u-text-lg MEGAPORT FESTIVAL

